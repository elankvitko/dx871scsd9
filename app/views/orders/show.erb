<%= render 'layouts/header' %>

<div class="head">
  <h3>Order #<%= @order.order_number %> - <%= @order.order_status %></h3>

  <table>
    <tr>
      <th>Store</th>
      <th>Item Name</th>
      <th>Item Model</th>
      <th>Status</th>
    </tr>

    <% @items.each_with_index do | item, idx | %>
      <tr>
        <td><%= item.store %></td>
        <td class='td-name'><%= item.name %></td>
        <td><%= item.model_number %></td>
        <td class='td-status'><%= item.status %></td>
      </tr>
    <% end %>
  </table>

  <%= link_to "Add To This Order", new_item_path( :order_id => params[ 'id' ] ) %>
</div>
